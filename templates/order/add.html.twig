{% extends 'base.html.twig' %}


{% block title %}Récapitulatif de commande - Cocorico{% endblock %}

{% block content %}

<h1>Récapitulatif de ma commande</h1>
<p>Vérifiez vos informations avant de payer votre commande</p>
<hr>

<div class="row">
    <div class="col-md-6 mt-3">
        <strong>Ma commande</strong>
        <div class="order-summary mt-2">
            {% set total = null %}
            {% for key,product in cart %}
                <div class="row {%if key > 0 %}mt-2{% endif %}">
                    <div class="col-2">
                        <img src="upload/{{ product.product.    image }}" alt="{{ product.product.name}}"   height="75px">
                    </div>
                    <div class="col-8 my-auto">
                        {{ product.product.name }}</br>
                        <small>{{ product.product.subtitle}}<br/>
                        x {{ product.quantity }}</small>
                    </div>
                    <div class="col-2 my-auto">
                         {{ (product.product.price/100)|    number_format(2, ',','.')}}€
                    </div>
                </div>
                {% set total = total + (product.product.price * product.quantity) %}
            {% endfor %}
        </div>
        <hr>
        <div class="row justify-content-end">
            <div class="col-4 ">
                <p class="text-right"><strong>Sous-Total :</strong> {{ (total/100)|number_format(2, ',','.')}}  €</p>
                <p class="text-right"><strong>Livraison : </strong> {{ (carrier.price)|number_format(2, ',','.  ')}}€</p></strong>
                <hr>
                <p class="text-right"><strong>Total : </strong> {{  ((total/100) + carrier.price)|number_format(2, ',',  '.')}}€</p>
            </div>
        </div>  
    </div>
    <div class="col-md-6 mt-3">
        <strong>Mon adresse de livraison</strong><br/> 
        <div class="form-check">
            {{ delivery|raw }}
        </div>
        <hr>
        <strong> Mon transporteur</strong><br/>
        <div class="form-check">
            {{ carrier.name }}<br/>
            {{ carrier.description }}<br/>
            {{ carrier.price|number_format(2, ',','.  ')}}€ 
        </div>
    
    <form action="{{ path('stripe_checkout') }}" method="POST">
        <button type="submit" id="checkout-button" class="btn btn-success btn-block mt-3 p-3">Payer | {{  ((total/100) + carrier.price)|number_format(2, ',',  '.')}}€</button>
    </form>
</div>

{% endblock %}
