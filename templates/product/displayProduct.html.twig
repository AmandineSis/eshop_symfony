{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block content %}
    <div class="row single-product-container">
        <div class="col-md-5">
            <img src="/upload/{{product.image}}" alt="{{product.name}}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{product.name}}</h3>
            <p>{{product.subtitle}}</p>
            <span class="product-detail-price">{{ (product.price/100)|number_format(2, ',','.')}}€</span>

            <hr>
            <p>{{product.description}}</p>
            <a href="{{ path('cart_add', {'id' : product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
    <hr>
    <h3>Nos meilleures ventes</h3>
    <p>Découvrez les articles les plus vendus</p>
    <div class="row mb-5">
        {% for product in bestProducts %}
            <div class="col-md-3">
                {% include "product/single_product.html.twig" %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
