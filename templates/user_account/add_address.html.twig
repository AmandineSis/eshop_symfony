{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - Cocorico{% endblock %}

{% block content %}
    <a href="" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Ajouter une adresse</h1>
    <a href={{path('account')}}>Retour</a><br/>
    <hr>
    {{ form_start(address_form) }}
    <div class="row">
        <div class="col-md-12">{{ form_row(address_form.name) }}</div>
        
        <div class="col-md-6">{{ form_row(address_form.lastname) }}</div>
        <div class="col-md-6">{{ form_row(address_form.firstname) }}</div>

        <div class="col-md-6">{{ form_row(address_form.address) }}</div>
        
        <div class="col-md-6">{{ form_row(address_form.city) }}</div>
        <div class="col-md-6">{{ form_row(address_form.postcode) }}</div>

        <div class="col-md-6">{{ form_row(address_form.country) }}</div>
        <div class="col-md-6">{{ form_row(address_form.phone) }}</div>
        <div class="col-md-6">{{ form_row(address_form.company) }}</div>
    </div>

    {{ form_end(address_form) }}
  
   
{% endblock %}